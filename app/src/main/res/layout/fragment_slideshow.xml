<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientLauncher.ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/RegisterDriverSeven"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Notificaciones"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_notificaciones"
            android:backgroundTint="#E8EAF6"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/IrAcercaApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Acerca de la aplicacion"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_about"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/TermsConditions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Terminos y condiciones"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:drawableLeft="@drawable/ic_terminos"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/IrLoginClient"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cerrar sesion"
            android:backgroundTint="#E8EAF6"
            android:drawableLeft="@drawable/ic_salir"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>